<resources>

    <style name="Theme.Orbiter" parent="Base.Theme.Orbiter">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="Theme.App.Dialog.FullScreen" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorSecondary">#7967d5</item>
    </style>

    <style name="text.body" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/jost_regular</item>
    </style>


    <style name="activity.title" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/ibm_plex_mono_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings.text.label" parent="@android:style/TextAppearance.Medium">
        <item name="android:font">@font/jost_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings.text.body" parent="@android:style/TextAppearance.Medium">
        <item name="android:font">@font/jost_regular</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>