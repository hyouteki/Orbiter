<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:ellipsize="middle"
        android:fontFamily="@font/ibm_plex_mono_regular"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="?attr/colorOnSecondaryContainer"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/launch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello moto" />

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/jost_regular"
        android:maxLines="1"
        tools:text= "dummy time"
        android:textColor="?attr/colorSurfaceInverse"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/url"
        app:layout_constraintEnd_toEndOf="@id/url"
        app:layout_constraintTop_toBottomOf="@id/url" />

    <ImageView
        android:id="@+id/launch"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/launch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorSurfaceInverse" />

</androidx.constraintlayout.widget.ConstraintLayout>